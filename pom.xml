						</manifest>
					</archive>
				</configuration>
			</plugin>
			
			<!--
			 BEGIN: Shader Plugin Openstack  usage
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
